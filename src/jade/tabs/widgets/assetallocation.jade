.widget.widget-assetallocation
  h4(ng-click='showWidgetAssetallocation=!showWidgetAssetallocation'
    ng-init='showWidgetAssetallocation=true')
    span(l10n) Asset Allocation
    i.fa.fa-fw.fa-caret-down(ng-class="{'closed': !showWidgetAssetallocation}")

  div(rp-slide='showWidgetAssetallocation')
    rp-pie-chart(
      ng-class="{'blank': !exchangeRatesNonempty}"
      rp-size="100%"
      rp-drops="account.Balance"
      rp-ious="balances"
      rp-exchange-rates="exchangeRates")

    div.widget_loader(ng-hide="exchangeRatesNonempty")
      img(src="img/sections.png", class="loader")
